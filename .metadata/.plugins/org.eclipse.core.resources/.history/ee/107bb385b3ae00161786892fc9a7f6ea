package ColumnBasedGame;

import javafx.scene.layout.AnchorPane;
import javafx.scene.paint.Color;
import javafx.scene.shape.Rectangle;

public class PutButton {

	private Rectangle icon;
	private int column;

	public PutButton(int columnWidth, int rowHeight, int column, AnchorPane parent) {
		this.column = column;
		icon = new Rectangle(columnWidth*column, 0, columnWidth, rowHeight);
		icon.setFill(Color.BLACK);
		icon.setOnMouseClicked(e -> {
			new GamePiece(ColumnGame.getColumn(this.column), ColumnGame.getTeam());
		});
		parent.getChildren().add(icon);
	}

}

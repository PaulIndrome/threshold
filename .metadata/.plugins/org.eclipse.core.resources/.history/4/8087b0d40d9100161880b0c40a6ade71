<?php

# Definition der Datenablage, Persistenzschicht
define('DATA', 'counter.txt');

#Hilfsvariable
#Counter, numerische Variable
$i = 0;
if (file_exists(DATA)) {
	$content = file(DATA);
}
if ($content){
	$i = $content[0];
	$i++;
	echo "Die Datei wurde $i Mal aufgerufen.";
} else {
	$i++;
}

# Zählerstand erhöhen und zurückschreiben
# (Daten persistieren)

$fh = fopen(DATA, 'w');
fwrite($fh, $i);
fclose($fh);


?>	
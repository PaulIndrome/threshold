package ColumnBasedGame;

import javafx.scene.Group;
import javafx.scene.layout.AnchorPane;
import javafx.scene.paint.Color;
import javafx.scene.shape.Rectangle;

public class PutButton {

	private Rectangle icon;
	private int column;

	public PutButton(double columnWidth2, double rowHeight2, int xPos, int columNo, Group column2) {
		this.column = columNo;
		icon = new Rectangle(xPos, 0, columnWidth2, rowHeight2);
		icon.setFill(Color.BLACK);
		icon.setOnMouseClicked(e -> {
			new GamePiece(ColumnGame.getColumn(this.column), ColumnGame.getTeam());
		});
		column2.getChildren().add(icon);
	}

}

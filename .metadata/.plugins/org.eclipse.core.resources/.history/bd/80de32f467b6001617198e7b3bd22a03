package ColumnGameV2;

import javafx.scene.Group;
import javafx.scene.layout.AnchorPane;

public class ColumnControl {
	
	private Group controlGroup;

	public ColumnControl(AnchorPane parent){
		controlGroup = new Group();
		parent.getChildren().add(controlGroup);
	}
	
	public void createPutButton(double colWidth, double rowHeight, double xPos, int columNo, int height){
		new PutButtonRedo(colWidth, rowHeight, columNo*(colWidth+margin), columNo, height, controlGroup);
	}
	
}

package ColumnBasedGame;

public class Delta {
	
	private int colD;
	private int rowD;
	
	public Delta(int colD, int rowD){
		if(colD>=-1 && colD<=1 && rowD>=-1 && rowD<=1){
			this.colD = colD;
			this.rowD = rowD;
		} else {
			throw new IllegalArgumentException("Delta must be 1, -1 or 0");
		}
		
	}

	public int colD() {
		return colD;
	}

	public int rowD() {
		return rowD;
	}
}

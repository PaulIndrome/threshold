package ColumnBasedGame;

import javafx.scene.Group;
import javafx.scene.layout.AnchorPane;
import javafx.scene.paint.Color;
import javafx.scene.shape.Rectangle;

public class PutButton {

	private Rectangle icon;
	private int column;

	public PutButton(int columnWidth, int rowHeight, int columNo, int xPos, Group column2) {
		this.column = columNo;
		icon = new Rectangle(columnWidth*columNo, 0, columnWidth, rowHeight);
		icon.setFill(Color.BLACK);
		icon.setOnMouseClicked(e -> {
			new GamePiece(ColumnGame.getColumn(this.column), ColumnGame.getTeam());
		});
		column2.getChildren().add(icon);
	}

}
